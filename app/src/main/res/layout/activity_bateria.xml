<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de la baterÃ­a"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/batterylevel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Level:"
        android:textSize="20dp"
        android:layout_below="@+id/textView8"
        android:password="false"
        android:phoneNumber="false"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/batteryvoltage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Voltage:"
        android:layout_below="@+id/batterylevel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/batterytemperature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Battery Temperature:"
        android:layout_below="@+id/batteryvoltage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/batterytechology"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Technology:"
        android:layout_below="@+id/batterytemperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/batterystatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_below="@+id/batterytechology"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/batteryhealth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Health:"
        android:layout_below="@+id/batterystatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/battery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/batteryhealth" />

</RelativeLayout>
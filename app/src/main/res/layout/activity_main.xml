<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#90CAF9"
    android:id="@+id/bateria">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton"
        android:layout_marginTop="42dp"
        android:src="@drawable/maps"
        android:onClick="imageclick"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_below="@+id/textClock" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/camera"
        android:onClick="clickcam"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/gplay"
        android:onClick="openclock"
        android:layout_above="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/music"
        android:onClick="clickmusic"
        android:layout_below="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton5"
        android:layout_toStartOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/whatsapp"
        android:onClick="clickwhatsapp"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:id="@+id/imageButton6"
        android:src="@drawable/web"
        android:onClick="clickweb"
        android:layout_below="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton7"
        android:src="@drawable/ic_allapps_pressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:onClick="showApps"
        android:background="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bateria:"
        android:id="@+id/batterylevel"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Voltaje"
        android:id="@+id/batteryvoltage"
        android:layout_above="@+id/batteryhealth"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temperaruta: "
        android:id="@+id/batterytemperature"
        android:layout_below="@+id/batterystatus"
        android:layout_alignLeft="@+id/batterystatus"
        android:layout_alignStart="@+id/batterystatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tecnología:"
        android:id="@+id/batterytechology"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status: "
        android:id="@+id/batterystatus"
        android:layout_below="@+id/batterytechology"
        android:layout_alignLeft="@+id/batterytechology"
        android:layout_alignStart="@+id/batterytechology" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Salud:"
        android:id="@+id/batteryhealth"
        android:layout_alignTop="@+id/batterystatus"
        android:layout_alignLeft="@+id/batteryvoltage"
        android:layout_alignStart="@+id/batteryvoltage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estado de la batería"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>